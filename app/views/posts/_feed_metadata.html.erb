<% if post.tagged? %>
  <div class="feed-metadata">
    <%= icon('tag') %> <%= link_to post.tag.name, post.tag %>
  </div>
<% elsif post.recommended? %>
<div class="feed-metadata">
  <%= t '.recommended_by', :link_to_post => (link_to post.recommender.username, post.recommender) %>
  <% if (post.likes_count > 2) %>
    <%= t '.and', :pluralize_post => (pluralize(post.likes.count - 1, 'other')) %>
  <% end %>
</div>
<% elsif post.featured? %>
  <div class="feed-metadata">
    <%= t '.featured_by', :post_likes => (pluralize(post.likes_count, 'other') ) %>
  </div>
<% end %>
