<div data-behavior="overlay" class="overlay overlay-hugeinc">
  <button data-behavior="close-overlay" type="button" class="overlay-close"><span class="glyphicon glyphicon-remove"></span></button>
  <nav>
    <h2 class="grayed-heading center"><%= t '.sign_in_or' %></h2>
    <ul class="omniauth-button-group">
      <li class="omniauth-button">
        <%= link_to user_omniauth_authorize_path(:facebook), class: 'button facebook' do %>
          <%= t '.sign_in_with', :icon_facebook => (icon('facebook-official')) %>
        <% end %>
      </li>

      <li class="omniauth-button google">
        <%= link_to user_omniauth_authorize_path(:google_oauth2), class: 'button google' do %>
          <%= t '.sign_in_with_1', :icon_google => (icon('google')) %>
        <% end %>
      </li>

      <li class="omniauth-button twitter">
        <%= link_to user_omniauth_authorize_path(:twitter), class: 'button twitter' do %>
          <%= t '.sign_in_with_2', :icon_twitter => (icon('twitter')) %>
        <% end %>
      </li>

      <li>
        <%= link_to (t '.sign_in_or_1'), new_user_session_path, class: "signin-signup-link" %>
      </li>
    </ul>
  </nav>
</div>
